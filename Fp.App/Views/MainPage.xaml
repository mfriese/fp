<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:favm="clr-namespace:Fp.App.ViewModels"
    xmlns:fam="clr-namespace:Fp.App.Models"
    x:Class="Fp.App.Views.MainPage"
    x:DataType="favm:MainViewModel">
    <Grid
        RowDefinitions="*, auto">
        <CollectionView
            Grid.Row="0"
            ItemsSource="{Binding Todos}">
            <CollectionView.ItemTemplate>
                <DataTemplate
                    x:DataType="{x:Type fam:TodoModel}">
                    <Border
                        Margin="2"
                        Stroke="Black"
                        StrokeThickness="1"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 4,4,4,4">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type favm:MainViewModel}}, Path=EditTodoCommand}"
                                    CommandParameter="{Binding}" />
                        </Border.GestureRecognizers>
                        <Grid
                            Margin="8"
                            RowDefinitions="*, *">
                            <Label
                                Grid.Row="0"
                                Text="{Binding Header}"
                                FontAttributes="Bold" />
                            <Label
                                Grid.Row="1"
                                Text="{Binding Description}"
                                FontSize="Small" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button
            Grid.Row="1"
            Margin="16"
            Text="Create Todo"
            Command="{Binding CreateTodoCommand}"
            HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
